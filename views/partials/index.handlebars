<div class="container-fluid bg">

<div class="jumbotron text-center">
  <h1 class="display-4 text-center">Index</h1>
  <h3 class="lead">Online notes.</h3>
  <hr class="my-4">
  <h2>Share with everyone your notes for the day</h2>
<img id="img">
</div>



<div class="jumbotron">
  <div class="row text-center">
    <div class="col-6">
      <h2>Your Note!</h2>
    </div>
    <div class="col-6">
      <h2>User Notes!</h2>
    </div>
  </div>
  <hr class="my-4"> 
   <div class="row">
     <div class="col-2"></div>
    <div class="col-4">
      <ul class="open" >
        {{#each indexs}}
        {{#unless noted}}
        {{> indexs/index-block note=true}}
        {{/unless}}
        {{/each}}
      </ul>
      </div>
     
    <div class="col-4 text-left">
      <ul class="close" >
        {{#each indexs}}
        {{#if noted}}
        {{> indexs/index-block note=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-2"></div>
  </div>

  <hr class="my-4">

    <h2>Add a Burger!</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Index Name:</label>
      <input type="text" id="ca" index_name="index_name">
    </div>
 <hr class="my-4">
    <button class="btn btn-primary btn-lg" value="1" index_name="noted" type="submit">Add Your Note!</button>
  </form>
</div>

</div>
